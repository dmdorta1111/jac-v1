BEGIN_GUI_DESCR

END_GUI_DESCR

BEGIN_ASM_DESCR
	! IF OPERATION == 0
		! CONFIG_ELEM
	! END_IF
	IF OPERATION == 1
		IF	HAND_ == "RHR" OR HAND_ == "LH" OR \
			HAND_ == "RHR2" OR HAND_ == "RHRA2" OR \
			HAND_ == "LH1" OR HAND_ == "LHA1"
			SEARCH_MDL_REF DOOR_ASM CSYS "ACS3" ATTACH
			CREATE_UDF udf\csys DOOR_ASM
				UDF_REF ATTACH ATTACH
				UDF_DIM	ROTX 0
				UDF_DIM	ROTY 0
				UDF_DIM	ROTZ 90
				UDF_DIM	LOCX - 2.75
				UDF_DIM	LOCY HASP_CENTER
				UDF_DIM	LOCZ 0
				UDF_EXP_REF ATTACH CSYS 0
			END_CREATE_UDF
		END_IF

		IF	HAND_ == "LHR" OR HAND_ == "RH" OR \
			HAND_ == "LHR1" OR HAND_ == "LHRA1" OR \
			HAND_ == "RH2" OR HAND_ == "RHA2"
			SEARCH_MDL_REF DOOR_ASM CSYS "ACS4" ATTACH
			CREATE_UDF udf\csys DOOR_ASM
				UDF_REF ATTACH ATTACH
				UDF_DIM	ROTX 0
				UDF_DIM	ROTY 0
				UDF_DIM	ROTZ 90
				UDF_DIM	LOCX - 2.75
				UDF_DIM	LOCY HASP_CENTER
				UDF_DIM	LOCZ 0
				UDF_EXP_REF ATTACH CSYS 0
			END_CREATE_UDF
		END_IF
			
		RETRIEVE_MDL EXIT_REINFORCEMENT_TAIL.ASM COMP
		
		SEARCH_MDL_REF COMP CSYS "PLACEMENT" PLACEMENT

		ASSEMBLE COMP DOOR_ASM
			 CSYS ATTACH PLACEMENT
		END_ASSEMBLE
	END_IF

	IF OPERATION == 2
		IF HAND == "LH" OR HAND == "RHR"
			SEARCH_MDL_REF FRAME_ASM CSYS "ORIENT" ASM_CSYS
			CREATE_UDF udf\csys FRAME_ASM
			UDF_REF ATTACH ASM_CSYS
			UDF_DIM	ROTX 0
			UDF_DIM	ROTY 90
			UDF_DIM	ROTZ 0
			UDF_DIM	LOCX -(JOW/2) - 1
			UDF_DIM	LOCY HASP_CENTER
			UDF_DIM	LOCZ (JD/2) - .125
			UDF_EXP_REF ATTACH CSYS 0
			END_CREATE_UDF
		END_IF

		IF HAND == "RH" OR HAND == "LHR"
			SEARCH_MDL_REF FRAME_ASM CSYS "ORIENT" ASM_CSYS
			CREATE_UDF udf\csys FRAME_ASM
			UDF_REF ATTACH ASM_CSYS
			UDF_DIM	ROTX 0
			UDF_DIM	ROTY 270
			UDF_DIM	ROTZ 180
			UDF_DIM	LOCX (JOW/2) + 1
			UDF_DIM	LOCY HASP_CENTER
			UDF_DIM	LOCZ (JD/2) - .125
			UDF_EXP_REF ATTACH CSYS 0
			END_CREATE_UDF
		END_IF

		RETRIEVE_MDL BU_FLAT.PRT COMP
		SEARCH_MDL_REF COMP CSYS "PLACEMENT4" PLACEMENT

			ASSEMBLE COMP FRAME_ASM
				CSYS ATTACH PLACEMENT
			END_ASSEMBLE
		
		SET_MDL_PARAM COMP "STOCKTYPE" 1
		SET_MDL_PARAM COMP "EMJACNUM" "999"
		SET_MDL_PARAM COMP "EMJACDESC" "RIM STRIKE REINFORCEMENT"
		SET_MDL_PARAM COMP "d41" 12
		SET_MDL_PARAM COMP "d40" 1.5
		SET_MDL_PARAM COMP "SMT_THICKNESS" 0.105

			CALL_EX instantiate.tab
				VAR_IN	COMP	COMP
			END_CALL_EX
	END_IF
END_ASM_DESCR
